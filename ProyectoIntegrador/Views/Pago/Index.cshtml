@model IEnumerable<ProyectoIntegrador.Models.Pago>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MontoPago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaPago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoraPago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdReservaNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdTipoPagoNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MontoPago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaPago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoraPago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdReservaNavigation.IdReserva)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTipoPagoNavigation.IdTipoPago)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPago">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdPago">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPago">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
